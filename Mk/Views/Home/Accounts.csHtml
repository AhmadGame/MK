@model Mk.ViewModels.AccountListViewModel
@{
    ViewData["Title"] = "VH trafikskola";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <div class="page-header">
        <h1>Accounts</h1>
    </div>

    <div class="row">
        @Html.ActionLink("Add Account", "AddAccount", "Home", new { }, new { @class = "btn btn-primary", @style = "margin-bottom: 1rem"})
        <ul class="list-group">
            @foreach (var email in Model.emails)
            {
                <li class="list-group-item">
                    @Html.ActionLink(email, "EditAccount", new {email = email})
                </li>
            }
        </ul>
    </div>
}
@model Mk.ViewModels.QuestionIoModel
@{
    ViewData["Title"] = "VH trafikskola";
}

@{
    var listItems = Util.SupportedLanguages().Select(language => new SelectListItem
    {
        Text = language, Value = language
    }).ToList();
}

<div class="page-header">
        <h1>Add Question</h1>
    </div>

@using (Html.BeginForm("AddQuestion", "Home", FormMethod.Post, new {@enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.language, "Language")
        @Html.DropDownListFor(m => m.language, listItems, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.title, "Title")
        @Html.TextBoxFor(m => m.title, new { @class = "form-control", @placeholder = "Title" })
        @Html.ValidationMessageFor(m => m.title, "", new { @style = "color: red;" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.answer1, "Answer 1")
        @Html.TextBoxFor(m => m.answer1, new {@class = "form-control", @placeholder = "Answer 1"})
        @Html.ValidationMessageFor(m => m.answer1, "", new {@style = "color: red;"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.answer2, "Answer 2")
        @Html.TextBoxFor(m => m.answer2, new {@class = "form-control", @placeholder = "Answer 2"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.answer3, "Answer 3")
        @Html.TextBoxFor(m => m.answer3, new {@class = "form-control", @placeholder = "Answer 3"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.answer4, "Answer 4")
        @Html.TextBoxFor(m => m.answer4, new {@class = "form-control", @placeholder = "Answer 4"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.correct, "Correct Answer")
        @Html.TextBoxFor(m => m.correct, new {@class = "form-control", @placeholder = "Correct Answer"})
        @Html.ValidationMessageFor(m => m.correct, "", new { @style = "color: red;" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.explain1, "Explanation 1")
        @Html.TextBoxFor(m => m.explain1, new {@class = "form-control", @placeholder = "Explanation 1"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.explain2, "Explanation 2")
        @Html.TextBoxFor(m => m.explain2, new {@class= "form-control", @placeholder = "Explanation 2"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.explain3, "Explanation 3")
        @Html.TextBoxFor(m => m.explain3, new {@class = "form-control", @placeholder = "Explanation 3"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.explain4, "Explanation 4")
        @Html.TextBoxFor(m => m.explain4, new {@class = "form-control", @placeholder = "Explanation 4"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.image1, "Image 1")
        <input type="file" name="Image1" class="form-control"/>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.image1, "Image 2")
        <input type="file" name="Image2" class="form-control"/>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.image1, "Image 3")
        <input type="file" name="Image3" class="form-control"/>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.image1, "Image 4")
        <input type="file" name="Image4" class="form-control" />
    </div>
    @Html.ActionLink("Cancel", "Admin", "Home", new {}, new {@class = "btn btn-default" })
    <button type="submit" class="btn btn-primary">Submit</button>

}
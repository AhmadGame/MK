@model Mk.ViewModels.AccountViewModel
@{
    ViewData["Title"] = "VH trafikskola";
}

    <div class="page-header">
        <h1>Add Account</h1>
    </div>

@using (Html.BeginForm("AddAccount", "Home", new {}, FormMethod.Post, new {@role = "form"}))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.email, "Email")
        @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "Email", @type = "email" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.password, "Password")
        @Html.TextBoxFor(m => m.password, new {@class = "form-control", @placeholder = "Password", @type = "password"})
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(m => m.isAdmin)
        @Html.LabelFor(m => m.isAdmin, "Admin")
    </div>
    @Html.ActionLink("Cancel", "Admin", "Home", new { }, new { @class = "btn btn-default" })
    <button type="submit" class="btn btn-success">Submit</button>
}